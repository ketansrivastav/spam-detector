    "userReputation": {
      "lowFollowerThreshold": 10,
      "lowFollowerPenalty": 10,
      "unverifiedPenalty": 5
    }
  },

  "scoring": {
    "weights": {
      "spamKeywords": 8,
      "excessiveUrls": 8,
      "excessiveHashtags": 6,
      "caps": 4.5,
      "userDescriotionSpamKeywords": 6.15,
      "userDescriptionExcessiveHashtag": 5.5,
      "userDescriptionExcessiveUrls": 5.75,
      "userNameSpamyKeywords": 6,
      "isLowFollowers": 25,
      "isUserLowFollowCount": 20,
      "isUserNotVerified": 10,
      "isHistoryPostingOften": 50
    }
  },

  "platformSpecific": {
    "twitter": {
      "postHistoryCount": 20,
      "cachePrefix": "twitter:history:",
      "cacheTTL": 259200000,
      "maxLength": 280,
      "allowedMediaTypes": ["image", "video", "gif"],
      "maxMediaPerPost": 4
